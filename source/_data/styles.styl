  list-style: none;
  padding: 40px 20px;
  min-height: 50vh;
  margin-bottom: 12px;
  margin-top: 0;

  li {
    border-bottom: 1px dashed $grey-lighter;
    &:last-child {
      border-bottom: none;
    }
    a {
      transition-property: background-color;
      padding: 10px;
      padding: 5px 20px;
      position: relative;
      transition-property: background-color;
      display: flex;
      align-items: center;
      border: none;
      justify-content: space-between;
      &:hover {
        background: var(--menu-item-bg-color);
      }
      time {
        color: #999;
      }
    }
  }
}

