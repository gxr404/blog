.post-block {
  position: relative;
  overflow: hidden;
  .badge {
    border: 4px solid #000;
    color: #000;
    border-radius: 50%;
    position: absolute;
    padding: 10px;
    top: -16px;
    right: -16px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.3em;
    transform: scale(1.4) rotate(45deg);
    width: 60px;
    height: 60px;
    font-weight: bold;
    opacity: 0.1;
    &::after {
      content: '';
      display: block;
      border:  2px solid #000;
      border-radius: 50%;
      width: 80%;
      height: 80%;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
  }
}

